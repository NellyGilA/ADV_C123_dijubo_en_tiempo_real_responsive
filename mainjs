noseX = 0;
noseY = 0;
difference = 0;
rightWristX = 0;
leftWristX = 0;

function setup() {

  // Crear video responsivo
  video = createCapture(VIDEO);
  video.size(windowWidth * 0.4, windowWidth * 0.4);
  video.center();

  // Crear canvas responsivo
  canvas = createCanvas(windowWidth * 0.6, windowHeight * 0.6);
  canvas.center();

  // Iniciar PoseNet
  poseNet = ml5.poseNet(video, modelLoaded);
  poseNet.on('pose', gotPoses);
}

function modelLoaded() {
  console.log('PoseNet Is Initialized!');
}

function gotPoses(results) {
  if (results.length > 0) {

    noseX = results[0].pose.nose.x;
    noseY = results[0].pose.nose.y;

    leftWristX = results[0].pose.leftWrist.x;
    rightWristX = results[0].pose.rightWrist.x;

    // Evitar valores negativos
    difference = abs(floor(leftWristX - rightWristX));
  }
}

function draw() {

  background('#969A97');

  document.getElementById("square_side").innerHTML =
    "El alto y ancho del cuadrado ser√°: " + difference + " px";

  fill('#F90093');
  stroke('#F90093');

  // Limitar tama√±o m√≠nimo
  let size = max(difference, 20);

  square(noseX, noseY, size);
}

// üî• MUY IMPORTANTE para que sea responsivo
function windowResized() {
  resizeCanvas(windowWidth * 0.6, windowHeight * 0.6);
}
